<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medidas.Views.ViewHombre"
             xmlns:local="clr-namespace:Medidas.ViewModels"
             Title="Hombres">
    
    <ContentPage.BindingContext>
        <local:VMHombre></local:VMHombre>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        
        <StackLayout>

            <Label Text="Formulario de Medidas" FontSize="25" />
            <Label Text="Nombre"/>
            <Entry Keyboard="Text" Text="{Binding H1}"/>
            <Label Text="Identidad"/>
            <Entry Keyboard="Numeric" Text="{Binding H1}"/>
            <Label Text="Fecha de nacimiento"/>
            <Entry Keyboard="Numeric" Text="{Binding H1}"/>
            
            <Label Text="Peso"/>
            <Label Text="{Binding H1}" />

            <Label Text="Altura" />
            <Label Text="{Binding H1}" />

            <Button Text="Crear" Command="{Binding Crear}" ></Button>

            <Button Text="Abrir" Command="{Binding Abrir}"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>